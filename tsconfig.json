{
  "compilerOptions": {
    "baseUrl": "./src/app/",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@angular/*": [
        "./ngx-datetimepicker/node_modules/@angular/*"
      ]
    },
    "module": "esnext"
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "include": [
    "./src/app/"
  ],
  "exclude": [
    "**/**.spec.ts",
    "**/app.module.ts",
    "**/app.component.ts"
  ]
}